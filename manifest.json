{
  "name": "BigBotNetwork",
  "version": "1.0",
  "manifest_version": 2,

  "description": "The official BigBotNetwork browser extension.",
  "developer": {
    "name": "GregTCLTK",
    "url": "https://github.com/GregTCLTK"
  },
  "default_locale": "en",
  "homepage_url": "https://bigbotnetwork.com/",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "BigBotNetwork"
  }
}
